<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#697C7A" /> <!-- soft mint background -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#04433E" /> <!-- teal border -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Internal padding -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>

