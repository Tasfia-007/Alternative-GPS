<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchViewStyle">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>
    <style name="ShapeAppearanceOverlay.MaterialComponents.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="HintStyle">
        <item name="android:textSize">48sp</item> <!-- Adjust size as needed -->
        <item name="android:textColorHint">#808080</item> <!-- Optional -->
    </style>

    <style name="background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:alpha">0.7</item>
    </style>
    <style name="MenuItemTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item> <!-- Solid black text -->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="DrawerMenuItemStyle" parent="Widget.AppCompat.ListView.Menu">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item> <!-- Or customize -->
    </style>





</resources>



