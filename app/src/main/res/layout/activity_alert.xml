<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/alrt">  <!-- background image added here -->

    <!-- Contact Name Field -->
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Include Contact"
        android:background="@drawable/rounded_box_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <!-- Contact Number Field -->
    <TextView
        android:id="@+id/contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Include Number"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/rounded_box_gray"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        tools:ignore="HardcodedText" />

    <!-- ALERT Button -->
    <Button
        android:id="@+id/alert_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND ALERT!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:backgroundTint="#891007"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:enabled="false"
        tools:ignore="HardcodedText" />

</LinearLayout>
